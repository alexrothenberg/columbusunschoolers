<!DOCTYPE html>
<html>
<head>
  <title>Columbusunschoolers</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body id='wrapper'>
  <div id="container">

    <div id="header">
      <a href="/" title="Columbus Unschoolers' Co-op">
        <%= image_tag 'logo.png', alt:"Columbus Unschoolers' Co-op" %>
        <span>Columbus Unschoolers' Co-op</span>
      </a>

      <%= link_to 'Families', families_path %>
      <%= link_to 'Courses',  courses_path %>

      <% if adult_signed_in? %>
        <div id="logged_in">
          Welcome <%= current_adult.name %>
          <%= link_to 'Log out',  destroy_adult_session_path, method: :delete %>
        </div>
      <% end %>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

  </div>
</body>
</html>
